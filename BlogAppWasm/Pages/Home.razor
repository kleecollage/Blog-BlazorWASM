@page "/"

@inject IJSRuntime JsRuntime

<PageTitle>Home</PageTitle>

<h1>Last Posts</h1>

<div class="row mt-4">
    @foreach (var post in Posts)
    {
        <div class="col-3 mt-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">@post.Title</h3>
                </div>
                <div class="card-body">
                    <img src="@post.PathImage" alt="PostImage" class="img-fluid">
                </div>
                <div class="card-footer">
                    <NavLink href="@($"detail-post/{post.Id}")">More info ... </NavLink>
                </div>
            </div>
        </div>
    }
</div>








