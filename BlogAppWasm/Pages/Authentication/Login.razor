@page "/login"

<div class="py-4">
    <div class=" row form-group ">
        <div class="col-6 offset-3 ">
            <div class="card border">
                <div class="card-body px-lg-5 pt-4">
                    <h3 class="col-12 text-success text-center py-2">
                        <strong>Access</strong>
                    </h3>

                    <EditForm Model="UserAuthentication" OnValidSubmit="UserAccess">
                        <DataAnnotationsValidator />

                        @if (AuthenticationErrors)
                        {
                            <p class="text-center text-danger">@Errors</p>
                        }

                        <div class="form-row py-2">
                            <InputText @bind-Value="UserAuthentication.Username" id="email" placeholder="Username..." class="form-control mb-2" />
                            <ValidationMessage For="(()=>UserAuthentication.Username)"/>
                        </div>

                        <div class="form-row py-2">
                            <InputText @bind-Value="UserAuthentication.Password" type="password" placeholder="Password..." id="password" class="form-control mb-2" />
                            <ValidationMessage For="(()=>UserAuthentication.Password)"/>
                        </div>

                        <div class="row">
                            <div class="col-6">
                                @if (OnProcess)
                                {
                                    <button type="submit" class="btn btn-success disabled" style="vertical-align:middle;line-height:30px;">
                                        <i class="fas fa-sign-in-alt"></i> PLease wait...
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-success" style="vertical-align:middle;line-height:30px;">
                                        <i class="fas fa-sign-in-alt"></i>Access
                                    </button>
                                }
                            </div>
                            <div class="col-6">
                                <a href="/register"
                                   class="btn btn-primary text-white" style="vertical-align:middle;line-height:30px;">
                                    <i class="fas fa-user-plus"></i>Register New User
                                </a>
                            </div>
                        </div>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
</div>